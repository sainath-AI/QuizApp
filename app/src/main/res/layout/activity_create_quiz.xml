<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Views.CreateQuiz">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:background="#C37B89"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Create And Edit Quizes"
            android:paddingTop="10dp"
            android:paddingStart="55dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="60dp"/>

        <EditText
            android:layout_marginTop="100dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:hint="Add Question"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/etquestion"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="OptionA"
            android:id="@+id/optionA"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="optionB"
            android:textColor="@color/black"
            android:id="@+id/optionB"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:hint="optionC"
            android:textColor="@color/black"
            android:id="@+id/optionC"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="optionD"
            android:textColor="@color/black"
            android:id="@+id/optionD"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Edit Title"
            android:textColor="@color/black"
            android:id="@+id/editquestion"
            android:visibility="gone"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Edit Type"
            android:textColor="@color/white"
            android:id="@+id/editOptionA"
            android:visibility="gone"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Edit Amount"
            android:textColor="@color/white"
            android:id="@+id/editoptionB"
            android:visibility="gone"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Edit Type"
            android:textColor="@color/white"
            android:id="@+id/editOPtionc"
            android:visibility="gone"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Edit Amount"
            android:textColor="@color/white"
            android:id="@+id/editOptionD"
            android:visibility="gone"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_baseline_check_24"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll"
        app:layout_constraintVertical_bias="0.87" />


</androidx.constraintlayout.widget.ConstraintLayout>